<%= form_for(dashboard, url: dashboard_url) do |f| %>
  <% if dashboard.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(dashboard.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% dashboard.errors.full_messages.each do |message| %>
