<h1>Dashboard</h1>

<h2>Upcoming Tasks</h2>
<% @tasks_upcoming.each do |task| %>
  <div class="task">
    <h1 class="task--title"><%= task.title %></h1>
    <p><strong>Due Date: <%= task.due_date %></strong></p>
  </div>
<% end %>

<% if @tasks_upcoming.empty? %>
  <p>You have no upcoming tasks in the next 7 days.</p>
<% end %>


<h2>Overdue Tasks</h2>
<% if @tasks_overdue %>
  <% @tasks_overdue.each do |task| %>
    <div class="task">
      <h1 class="task--title"><%= task.title %></h1>
      <p><strong>Due Date: <%= task.due_date %></strong></p>
    </div>
  <% end %>
<% end %>

<% if @tasks_overdue.empty? %>
 <p>Good job! You have no overdue tasks.</p>
<% end %>
